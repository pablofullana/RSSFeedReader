= form_for @channel do |f|
  - if @channel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@channel.errors.count, "error")} prohibited this channel from being saved:"
      %ul
        - @channel.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url, :placeholder => "URL", :autofocus => true
  .field
    = f.label :name
    = f.text_field :name, :placeholder => "Name"
  .field
    = f.label :user_id
    = f.number_field :user_id, :value => current_user.id, :readonly => true
  .actions
    = f.submit 'Save'
