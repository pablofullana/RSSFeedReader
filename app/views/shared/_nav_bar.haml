.navbar.navbar-fixed-top
  .navbar-inner
    %a.brand{href: root_path} RSSFeedReader
    %ul.nav
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
          %i.icon-th-list
            My Channels
            %b.caret
        %ul.dropdown-menu
          - current_user.channels.each do |channel|
            %li= link_to channel.name, channel_path(channel.id)
          %li.divider
          %li= link_to 'All channels', channels_path
          %li= link_to 'New channel', new_channel_path
    %ul.nav.pull-right
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
          %i.icon-user
            = current_user.login
            %b.caret
        %ul.dropdown-menu
          %li
            = link_to edit_user_registration_path do
              %i.icon-wrench
              Profile
          %li
            = link_to destroy_user_session_path, :data => { :confirm => "Are you sure?" }, :method => 'delete' do
              %i.icon-share
              Logout

