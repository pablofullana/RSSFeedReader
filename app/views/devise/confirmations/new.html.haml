.row
  .span4.offset4
    .well
      - if alert
        .alert.alert-error= alert
      - if notice
        .alert= notice
      %legend Resend confirmation instructions
      = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name)) do |f|
        = devise_error_messages!
        %form{"accept-charset" => "UTF-8", action: "", method: "POST"}
          = f.label :email
          = f.email_field :email, placeholder: "Email", :autofocus => true
          %br
          %button.btn-success.btn{type: "submit", id: "Resend confirmation"} Resend Confirmation
      = render "devise/shared/links"